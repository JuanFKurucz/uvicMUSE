<FloatLayout>:
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: 20, 190
            size: 570, 300


    Button:
        text: "Connect"
        pos_hint: {"x": 0.57,  "y": 0.75}
        font_size: 14
        size_hint: 0.1, 0.06
        background_color: .05,.5,.95,1


    Button:
        text: "Disconnect"
        pos_hint: {"x": 0.68,  "y": 0.75}
        font_size: 14
        size_hint: 0.1, 0.06
        background_color: .05,.5,.95,1


    Button:
        text: "Search"
        pos_hint: {"x": 0.81,  "y": 0.65}
        font_size: 14
        size_hint: 0.17, 0.08
        background_color: .05,.5,.95,1
        on_press: root.Search()


    Button:
        text: "Start Stream"
        pos_hint: {"x": 0.81,  "y": 0.55}
        font_size: 14
        size_hint: 0.17, 0.08
        background_color: .05,.5,.95,1


    Button:
        text: "Stop Stream"
        pos_hint: {"x": 0.81,  "y": 0.45}
        font_size: 14
        size_hint: 0.17, 0.08
        background_color: .05,.5,.95,1

    Image:
        source: 'logo.png'
        pos_hint: {"y": 0.39}

    Label:
        text: "Press Search to Look For Muse"
        size: 500, 20
        color: .05,.5,.95,1
        pos_hint: {"x": -0.33 , "y": -0.22}





        
       